{
  "name": "push-to-talk",
  "version": "1.0.0",
  "description": "Local Push-to-Talk transcription using whisper.cpp",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:mac:fast": "electron-builder --mac --dir",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.pushToTalk.app",
    "productName": "Push to Talk",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "whisper.cpp/build/bin/whisper-cli",
      "whisper.cpp/models/ggml-tiny.bin",
      "!whisper.cpp/.git",
      "!whisper.cpp/build/**/*.o",
      "!whisper.cpp/build/**/*.a"
    ],
    "extraResources": [
      {
        "from": "whisper.cpp/build/bin/whisper-cli",
        "to": "whisper-cli"
      },
      {
        "from": "whisper.cpp/models/ggml-tiny.bin",
        "to": "models/ggml-tiny.bin"
      },

      {
        "from": "config.json",
        "to": "config.json"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": ["dmg", "zip"],
      "hardenedRuntime": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Precisamos de acesso ao microfone para transcrever sua voz."
      }
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.png",
      "category": "Utility"
    }
  },
  "keywords": [
    "push-to-talk",
    "whisper",
    "transcription",
    "speech-to-text",
    "local",
    "electron"
  ],
  "author": "Ciro Maciel",
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  },
  "dependencies": {
    "clipboardy": "^4.0.0"
  }
}
