{
  "name": "push-to-talk",
  "version": "1.13.0",
  "description": "Transcrição de voz 100% local e privada",
  "repository": {
    "type": "git",
    "url": "https://github.com/ciro-maciel/push-to-talk.git"
  },
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:mac:fast": "electron-builder --mac --dir",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "publish": {
      "provider": "github",
      "owner": "ciro-maciel",
      "repo": "push-to-talk",
      "releaseType": "release"
    },
    "appId": "com.pushToTalk.app",
    "productName": "Push to Talk",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "whisper.cpp/build/bin/whisper-cli*",
      "!whisper.cpp/.git",
      "!whisper.cpp/build/**/*.o",
      "!whisper.cpp/build/**/*.a"
    ],
    "extraResources": [
      {
        "from": "config.json",
        "to": "config.json"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Precisamos de acesso ao microfone para transcrever sua voz."
      },
      "extraResources": [
        {
          "from": "whisper.cpp/build/bin/whisper-cli",
          "to": "whisper-cli"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico",
      "extraResources": [
        {
          "from": "whisper.cpp/build/bin/whisper-cli.exe",
          "to": "whisper-cli.exe"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/linux",
      "category": "Utility",
      "desktop": "build/push-to-talk.desktop",
      "extraResources": [
        {
          "from": "whisper.cpp/build/bin/whisper-cli",
          "to": "whisper-cli"
        }
      ]
    }
  },
  "keywords": [
    "push-to-talk",
    "whisper",
    "transcription",
    "speech-to-text",
    "local",
    "electron"
  ],
  "author": {
    "name": "Ciro Maciel",
    "email": "ciro.maciel@riligar.click"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  },
  "dependencies": {
    "clipboardy": "^4.0.0",
    "electron-log": "^5.4.3",
    "electron-mac-permissions": "^2.2.2",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "uiohook-napi": "^1.5.4"
  },
  "trustedDependencies": [
    "uiohook-napi"
  ]
}
